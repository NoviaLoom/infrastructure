# Core Service Environment Variables

# Service Configuration
SERVICE_NAME=core-service
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO           # DEBUG, INFO, WARNING, ERROR, CRITICAL
PORT=8001

# LLM API Keys
GOOGLE_API_KEY=your_google_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  # Optional

# Mock Mode (for development/testing without real API keys)
ENABLE_MOCK_LLM=false  # Set to true to use mock responses

# JWT Secret (for service-to-service authentication)
JWT_SECRET=your_jwt_secret_32_characters_minimum_here

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# Database (not used by Core Service but required by shared package)
DATABASE_URL=postgresql+asyncpg://postgres:password@postgres:5432/novialoom

# Other Service URLs (for future use)
APP_SERVICE_URL=http://app-service:8002
GATEWAY_SERVICE_URL=http://gateway-service:8000
